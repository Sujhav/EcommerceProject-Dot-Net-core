@model List<ProductsModel>
@{
    ViewData["Title"] = "ShowAllRecords";
}
@using EcommerceProject.Utility;
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    var count = HttpContextAccessor.HttpContext.Session.GetInt32("CartCount");
}

<h1>ShowAllRecords</h1>
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">
                            <label style="font-size: 23px;color: steelblue">@product.ProductName</label>
                        </h4>
                    </div>
                    <img src="@product.ImageUrl" alt="Card Image" class="card-img-top" style="height: 300px;" />
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <label style="font-size: 20px;color: #a51313"><b>Price : @product.Price</b></label>
                            </div>
                            <a asp-area="Customer" asp-action="ShowDetails" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success pull-right btn-outline-info">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
