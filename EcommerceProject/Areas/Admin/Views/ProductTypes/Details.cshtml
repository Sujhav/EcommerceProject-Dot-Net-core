@model EcommerceProject.Models.ProductTypesModel

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h3 class="card-title">@Model.ProductType</h3>
            <p class="card-text">Description</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-action="Index" asp-controller="ProductTypes" asp-area="Admin"
