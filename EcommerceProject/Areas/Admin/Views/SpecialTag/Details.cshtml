@model EcommerceProject.Models.SpecialTagModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h3 class="card-title">@Model.name</h3>
        <p class="card-text">Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-action="ShowAllSpecialTag" asp-controller="SpecialTag" asp-area="Admin"
                   class="btn btn-sm btn-outline-secondary">Special Tag List</a>
            </div>

        </div>
    </div>
</div>

</div>