@model  IEnumerable<SpecialTagModel>

@{
    ViewData["Title"] = "ShowAllSpecialTag";
    ViewData["EditAction"] = "EditSpecialTag";
    ViewData["Controller"] = "SpecialTag";
    ViewData["Details"] = "Details";
    ViewData["Delete"] = "Delete";
}

<div class="row">

<div class="col-6">
    <h2 class="text-info"> Special Tag List</h2>
</div>
<div class="col-6 text-right">
    <a asp-action="Create" asp-controller="SpecialTag" class="btn btn-info">&nbsp;New Special Tag</a>

</div>
</div>

<div class="container">
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(c => c.name)
            </th>
            <th></th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.name</td>

                <partial name="_ButtonPartialView" model="@item.id" />

            </tr>
        }
    </table>
</div>
