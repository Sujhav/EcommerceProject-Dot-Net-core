@model EcommerceProject.Models.ProductsModel

@{
    ViewData["Title"] = "EditProducts";
}


<h2 class="text-info">Edit Product</h2>

<h2>@ViewBag.message</h2>
<form asp-action="EditProducts" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductName"></label>
                </div>
                <div class="col-8">
                    <input type="hidden" asp-for="Id"/>
                    <input asp-for="ProductName" class="form-control" />
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Image" class="form-control" type="file" data-val="false" />
                </div>
                <span asp-validation-for="Image" class="text-danger" ></span>
            </div>
            <div class="form-group row">
                <div class="col-4"> 
                    <label asp-for="ProductColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductColor" class="form-control"  />
                </div>
                <span asp-validation-for="ProductColor" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="ProductId" asp-items="@ViewBag.Product" class="form-control"></select>
                    @*<input asp-for="ProductTypeId" class="form-control"/>*@
                </div>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="SpecialTagId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="SpecialTagId" asp-items="@ViewBag.SpecialTag" class="form-control"></select>
                    @*<input asp-for="SpecialTagId" class="form-control" />*@
                </div>
                <span asp-validation-for="SpecialTagId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsAvailable"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsAvailable" class="" type="checkbox" />
                </div>
                <span asp-validation-for="IsAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Update" />
                <a asp-action="ShowAllProduts" asp-controller="Product" asp-area="Admin" class="btn btn-success">Back to List</a>
            </div>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.ImageUrl" width="100%" height="250px" style="border-radius: 5px;border: 1px solid #efefef" />
        </div>
       
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

