@model int

<td style="width:150px">
 <div class="btn-group">
        <a class="btn btn-success" asp-action="@ViewData["EditAction"]" asp-controller="@ViewData["Controller"]" asp-area="Admin" asp-route-id="@Model">Edit</a>
        <a class="btn btn-primary" asp-action="@ViewData["Details"]" asp-controller="@ViewData["Controller"]" asp-area="Admin" asp-route-id="@Model">Details</a>

        <form asp-action="@ViewData["Delete"]" method="post" asp-route-id="@Model">
            <button type="submit"  class="btn btn-danger" onclick="return confirm(&quot;Are You sure you want to delete this product?&quot)">Delete</button>
    </form>
   
 </div>    
</td>   
<form action="/Transactions/DeleteTranscation/${TransactionId}" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-sm btn-link no-a-decoration"
            onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
        <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
    </button>
</form>